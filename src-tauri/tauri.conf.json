{
	"build": {
	"beforeDevCommand": "",
	"beforeBuildCommand": "",
	"devPath": "../src",
	"distDir": "../src",
	"withGlobalTauri": true
	},
	"package": {
	"productName": "thumbApp",
	"version": "0.0.0"
	},
	"tauri": {
	
		"allowlist": 
		{
			"all": true,
				"protocol": {
				"asset": true,
				"assetScope": [ "**" ],
				"all": true
			},
			"window": {
				"all": true,
				"startDragging": true,
				"setPosition":true,
				"setDecorations": true,
				"setCursorGrab": true
			},
			"shell": {
				"all": true,
				"open": true,
				"execute": true,
				"sidecar": true,
				"scope": [ 
					{
						"name": "open-explorer-and-select",
						"cmd": "explorer",
						"args": true
					}
				]
			},
			"path": {
				"all": true
			
			},
			"fs": {
				"all":  true,
				"readFile": true,
				"writeFile": true,
				"readDir": true,
				"exists": true,
				"scope": ["**"]
			},
			"dialog": {
				"all": true,
				"open": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tauri.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "thumbApp",
				"width": 800,
				"height": 600
			}
		]
	}
}
